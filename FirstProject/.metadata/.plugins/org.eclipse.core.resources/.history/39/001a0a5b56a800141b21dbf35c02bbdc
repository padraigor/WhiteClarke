package org.porourke.carshop.model.hibernate;

import java.util.ArrayList;
import java.util.Collection;

import javax.persistence.Cacheable;
import javax.persistence.Column;
import javax.persistence.Entity;
import javax.persistence.GeneratedValue;
import javax.persistence.GenerationType;
import javax.persistence.Id;
import javax.persistence.Transient;

import org.hibernate.annotations.Cache;
import org.hibernate.annotations.CacheConcurrencyStrategy;
import org.porourke.carshop.model.MakeInterface;
import org.porourke.carshop.model.ModelInterface;
import org.porourke.carshop.model.VehicleInterface;
import org.porourke.carshop.model.vechicles.Make;
import org.porourke.carshop.model.vechicles.Vehicle;

@Entity(name = "Model")
public class HibernateModel implements ModelInterface{
	@Id @GeneratedValue(strategy=GenerationType.AUTO)
	private long id;		//Unique Identifer
	
	@Transient //Remove later replace with @OneToMany
	private Collection<VehicleInterface> vehicles; // List of Vehicles with this model
	
	@Column(name = "make_id")
	private MakeInterface make;  // Car make for this model
	private String name;
	
	public HibernateModel(){
		this( -1, new ArrayList<VehicleInterface>(), null, "");
	}
	
	public HibernateModel(Collection<VehicleInterface> vehicles, MakeInterface make, String name){
		this(-1,vehicles, make, name);
	}
	
	public HibernateModel(int id, Collection<VehicleInterface> vehicles, MakeInterface make, String name) {
		super();
		this.id = id;
		this.vehicles = vehicles;
		this.make = make;
		this.name = name;
		
		if(vehicles != null){
			for(VehicleInterface v: vehicles){
				v.setModel(this);
			}
		}
	}
	
	public long getId() {
		return id;
	}
	public void setId(long id) {
		this.id = id;
	}
	
	public Collection<VehicleInterface> getVehicles() {
		return this.vehicles;
	}
	public void setVehicles(Collection<VehicleInterface> vehicles) {
		this.vehicles = vehicles;	
		for(VehicleInterface v: vehicles){
			v.setModel(this);
		}
	}
	public void addVehicle(VehicleInterface vehicle) {
		if(!vehicles.contains(vehicle)) {
			vehicles.add(vehicle);
			vehicle.setModel(this);
		}
		
	}
	public MakeInterface getMake() {
		return this.make;
	}
	public String getName(){	
		return this.name;
	}
	public void setName(String name) {
		this.name = name;
	}
	public void setMake(MakeInterface make) {
		this.make = make;
		make.addModel(this);//? check
	}

	@Override
	public int hashCode() {
		final int prime = 31;
		int result = 1;
		result = prime * result + (int) (id ^ (id >>> 32));
		result = prime * result + ((make == null) ? 0 : make.hashCode());
		result = prime * result + ((name == null) ? 0 : name.hashCode());
		return result;
	}

	@Override
	public boolean equals(Object obj) {
		if (this == obj)
			return true;
		if (obj == null)
			return false;
		if (getClass() != obj.getClass())
			return false;
		HibernateModel other = (HibernateModel) obj;
		if (id != other.id)
			return false;
		if (make == null) {
			if (other.make != null)
				return false;
		} else if (!make.equals(other.make))
			return false;
		if (name == null) {
			if (other.name != null)
				return false;
		} else if (!name.equals(other.name))
			return false;
		return true;
	}

	@Override
	public String toString() {
		return "HibernateModel [id=" + id + ", vehicles=" + vehicles
				+ ", make=" + make + ", name=" + name + "]";
	}

	

	
	
	

}
