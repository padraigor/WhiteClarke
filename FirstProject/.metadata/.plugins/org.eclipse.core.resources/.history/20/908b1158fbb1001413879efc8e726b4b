		<meta http-equiv="Content-Type" content="text/html; charset=ISO-8859-1">
		<title>DOJOTest</title>
	</head>
<body>
	<!-- Import DOJO -->
		<script src="//ajax.googleapis.com/ajax/libs/dojo/1.10.3/dojo/dojo.js" data-dojo-config="async: true"></script>
	
	<H1> JSONTestJSP.jsp </H1>
	<div id="output">Not Changed</div>
	<div id="event">Event</div>
	
	<!-- Test Get -->
		<script>
			require(["http://localhost:8080/carshop-frontend/JSONTest"], function(dom){dom.byId("output").innerHTML = "Dummy Responce Data";});
		</script>
		<script>
			require(["dojo/request,dojo/dom"], function(request,dom){
				request("/JSONTest").then(function(data){
					dom.byId("output").innerHTML = data;
				}, function(err){
					dom.byId("output").innerHTML = err;
				}, function(evt){
					dom.byId("event").innerHTML = evt;
			  	});
			});
		</script>

</body>
